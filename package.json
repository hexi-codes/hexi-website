{
  "name": "hexi-website-astro",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "astro dev --host --port 3000 2>&1 | tee dev.log",
    "website": "ASTRO_TELEMETRY_DISABLED=1 astro dev --host --port 3000",
    "sync:version": "bun ./scripts/sync-version.mjs",
    "prebuild": "bun run sync:version",
    "build": "astro build",
    "release:website": "ASTRO_TELEMETRY_DISABLED=1 bun run build",
    "start": "astro preview --host --port 3000 2>&1 | tee server.log",
    "lint": "eslint ."
  },
  "dependencies": {
    "astro": "^5.2.0",
    "prismjs": "^1.30.0",
    "tw-animate-css": "^1.3.5"
  },
  "devDependencies": {
    "@astrojs/check": "^0.9.4",
    "@astrojs/ts-plugin": "^1.10.4",
    "@tailwindcss/vite": "^4",
    "eslint": "^9",
    "tailwindcss": "^4",
    "typescript": "^5"
  }
}
